<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PreparationAvalonia.Histori"
        x:CompileBindings="False"
        Title="Histori">
    <Grid RowDefinitions="* * *" ColumnDefinitions="* * *">
        <StackPanel Grid.Row="1" Grid.Column="1">
            <ScrollViewer>
                <ListBox Name="HistorInfo" Width="200" Height="200">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding PersonCode}"/>
                                <TextBlock Text="{Binding PersonRole}"/>
                                <TextBlock Text="{Binding LastSecurityPointNumber}"/>
                                <TextBlock Text="{Binding LastSecurityPointDirection}"/>
                                <TextBlock Text="{Binding LastSecurityPointTime}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
